<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/view_activity_title"/>

    <RelativeLayout style="@style/myItem">

        <ImageView
            android:id="@+id/iv_re_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/re_password_ver" />

        <EditText
            android:id="@+id/et_re_phone"
            android:layout_toRightOf="@+id/iv_re_phone"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="设置新密码"
            style="@style/inputStyle"/>
    </RelativeLayout>

    <include layout="@layout/item_divider_line"/>

    <RelativeLayout style="@style/myItem">

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/re_password_ver" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_toRightOf="@+id/iv_collection"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:hint="确认密码"
            style="@style/inputStyle"/>
    </RelativeLayout>

    <include layout="@layout/item_divider_line"/>

    <Button
        android:id="@+id/btn_set_new_psw"
        android:layout_width="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="提交新密码"
        android:layout_alignParentRight="true"
        android:textColor="@color/main_white"
        android:textSize="18sp"
        android:background="@drawable/common_button"/>
</LinearLayout>