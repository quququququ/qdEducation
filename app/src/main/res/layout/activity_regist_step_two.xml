<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:background="@color/main_white"
        android:layout_marginRight="15dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="男"
                android:textSize="18sp"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="女"
                android:textSize="18sp"
                android:gravity="center"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout style="@style/myItem"
        android:layout_marginTop="28dp">

        <ImageView
            android:id="@+id/iv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/login_user" />

        <EditText
            android:id="@+id/et_user_name"
            android:layout_toRightOf="@+id/iv_collection"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="用户名"
            style="@style/inputStyle"/>
    </RelativeLayout>

    <include layout="@layout/item_divider_line"/>

    <RelativeLayout style="@style/myItem">

        <ImageView
            android:id="@+id/iv_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/login_password" />

        <EditText
            android:id="@+id/et_psw"
            android:layout_toRightOf="@+id/iv_psw"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="密码"
            style="@style/inputStyle"/>
    </RelativeLayout>

    <include layout="@layout/item_divider_line"/>

    <RelativeLayout style="@style/myItem">

        <ImageView
            android:id="@+id/iv_confirm_psw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/re_password_ver" />

        <EditText
            android:id="@+id/et_comfirm_psw"
            android:layout_toRightOf="@+id/iv_confirm_psw"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="确认密码"
            style="@style/inputStyle"/>
    </RelativeLayout>

    <include layout="@layout/item_divider_line"/>

    <Button
        android:id="@+id/btn_to_register"
        android:layout_width="200dp"
        android:layout_marginTop="22dp"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:text="注册"
        android:textColor="@color/main_white"
        android:textSize="18sp"
        android:background="@drawable/common_button"/>
</LinearLayout>