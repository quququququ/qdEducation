    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/main_white"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="听力"
                android:textColor="@color/main_blue"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_one_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="口语"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_two_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_three"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="阅读"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_three_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_four"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="写作"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_four_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_five"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="语法"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_five_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue"
                android:visibility="invisible"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_six"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="词汇"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_six_line"
                android:layout_width="25dp"
                android:layout_height="2dp"
                android:layout_marginTop="7dp"
                android:background="@color/main_blue"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <cn.bingoogolapple.refreshlayout.BGARefreshLayout
        android:id="@+id/bga_has_buy"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_has_buy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </cn.bingoogolapple.refreshlayout.BGARefreshLayout>
</LinearLayout>